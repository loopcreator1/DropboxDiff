{
	"name": "DropboxDiff",
	"description": "Compare versions of your Dropbox files with your configured diff tool. Trigger from any \"Previous versions\" page on Dropbox.",
	"version": "1.0.2.8",

	"manifest_version": 2,
	"background": {
		"page": "background.html"
	},
	"content_scripts": [
		{
			"css": [
				"styles.css"
			],
			"js": [
				"jquery-1.8.0.min.js",
				"content.js"
			],
			"matches": [ "https://www.dropbox.com/revisions/*" ],
			"run_at": "document_end"
		}
	],
	"content_security_policy": "default-src 'self' https://*.dropbox.com",
	"icons": {
		"128": "128.png",
		"16": "16.png",
		"48": "48.png"
	},
	"minimum_chrome_version": "13.0.782.215",
	"options_page": "options.html",
	"permissions": [
		"https://*.dropbox.com/*"
	],
	"plugins": [
		{ "path": "plugin/npDropboxDiffPlugin.dll" },
		{ "path": "plugin/DropboxDiffPlugin.plugin" },
		{ "path": "plugin/npDropboxDiffPlugin.so" }
	]
}
